<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Update user</title>
</head>
<body>
    <div class="update-user-container">
        <form action="/update-user" method="POST">
            <div><b>Update user:</b></div>
            <div>
                <label>First Name:</label>
                <input type="text" name="firstName" value="<%= dataDetailUser[0][0].firstName %>" />
            </div>
            <div>
                <label>Last Name:</label>
                <input type="text" name="lastName" value="<%= dataDetailUser[0][0].lastName %>" />
            </div>
            <div>
                <label>Email:</label>
                <input type="email" name="email" value="<%= dataDetailUser[0][0].email %>" />
            </div>
            <div>
                <label>Address:</label>
                <input type="text" name="address" value="<%= dataDetailUser[0][0].address %>" />
            </div>
            <input type="text" name="id" value="<%= dataDetailUser[0][0].id %>" hidden />
            <div>
                <button type="submit" class="btn-submit">Update</button>
            </div>

        </form>

    </div>
</body>
</html>